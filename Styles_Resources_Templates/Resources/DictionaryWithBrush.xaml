<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Styles_Resources_Templates.Resources">
    <SolidColorBrush x:Key = "fileResource" Color = "PowderBlue" />
    <SolidColorBrush x:Key = "brushResource" Color = "BlanchedAlmond" />

    <LinearGradientBrush x:Key="formBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="Blue" Offset="0" />
        <GradientStop Color="#460000FF" Offset="1" />
    </LinearGradientBrush>
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="Gray" />
        <Setter Property="FontSize" Value="14" />
    </Style>


    <Style  TargetType = "TextBox">
        <Setter Property = "Height" Value = "30" />
        <Setter Property = "Width" Value = "80" />
        <Setter Property = "Foreground" Value = "Blue" />
        <Setter Property = "FontSize" Value = "12" />
        <Setter Property = "Margin" Value = "0" />
        <Setter Property="Padding" Value="2"/>
    </Style>
    
</ResourceDictionary>